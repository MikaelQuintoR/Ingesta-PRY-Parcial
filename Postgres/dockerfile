FROM python:3.12-slim

# Evita buffering en la salida
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Instala boto3 + psycopg2
RUN pip install --no-cache-dir boto3 psycopg2-binary

# Copia CSVs (tu carpeta 'Data') y el script con el nombre correcto
COPY Data/ ./Data/
COPY IngestaPostgres.py ./

# Arranca el script
CMD ["python3", "IngestaPostgres.py"]
